@model Producto
@{
    ViewData["Title"] = "Detalle de producto";
}

<link rel="stylesheet" href="../Views/styles.css" />


<h1>@ViewData["Title"]</h1>
<p>En esta página se muestran los detalles del producto</p>
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="col-md-6">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" readonly>
    </div>

    <div class="col-5">
        <label>Cantidad</label>
        <input asp-for="Cantidad" class="form-control" readonly>
    </div>

    <div class="row" style="margin-top: 1rem">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-primary">Regresar</a>
        </div>
    </div>
</form>

